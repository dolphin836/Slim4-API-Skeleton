        "slim/slim": "4.*",
        "vlucas/phpdotenv": "^2.4",
        "slim/psr7": "^1.1",
        "doctrine/orm": "^2.7",
        "php-di/php-di": "^6.2",
        "guzzlehttp/guzzle": "^7.0",
        "php-amqplib/php-amqplib": "^3.0",
        "php-mqtt/client": "^1.1",
        "monolog/monolog": "^2.1",
        "symfony/yaml": "^5.1",
        "symfony/serializer": "^5.3"
    },
    "autoload": {
        "psr-4": {
            "Dolphin\\Ting\\": "app/"
        }
